<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BakingAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BakingAppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">?theme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextColor">@color/whiteColor</item>
        <item name="titleTextAppearance">@style/BakingAppTheme.TextAppearance.Toolbar</item>
    </style>

    <style name="BakingAppTheme.h1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BakingAppTheme.TextAppearance.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
