<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <FrameLayout
        android:id="@+id/vg_step_number"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="@dimen/double_padding"
        android:layout_marginLeft="@dimen/double_padding"
        android:background="@color/dividerColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_step_number"
            style="@style/BakingAppTheme.h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/whiteColor" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_name"
        style="@style/BakingAppTheme.body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_padding"
        android:layout_marginStart="@dimen/base_padding"
        app:layout_constraintBottom_toBottomOf="@+id/vg_step_number"
        app:layout_constraintLeft_toRightOf="@+id/vg_step_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vg_step_number" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>